{
  "name": "siteboss-backend",
  "version": "1.0.0",
  "description": "SiteBoss Construction Project Management Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "migrate": "ts-node -e \"require('./src/database/migrations').runMigrationsCommand()\"",
    "migrate:rollback": "ts-node -e \"require('./src/database/migrations').rollbackMigrationCommand()\"",
    "migrate:status": "ts-node -e \"require('./src/database/migrations').migrationStatusCommand()\"",
    "db:seed": "ts-node scripts/seed.ts",
    "docker:build": "docker build -t siteboss-backend .",
    "docker:run": "docker run -p 3001:3001 siteboss-backend",
    "security:audit": "npm audit --audit-level moderate",
    "logs:clear": "rm -rf logs/*.log"
  },
  "keywords": [
    "construction",
    "project-management",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/compression": "^1.8.1",
    "@types/connect-redis": "^0.0.23",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "connect-redis": "^9.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "redis": "^5.8.2",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.4",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  }
}
