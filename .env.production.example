# Production Environment Configuration
# Copy to .env.production and fill in actual values

# Docker Compose
COMPOSE_PROJECT_NAME=siteboss-prod

# Database (Production)
POSTGRES_DB=siteboss_prod
POSTGRES_USER=siteboss_user
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
POSTGRES_PORT=5432

# Backend API (Production)
API_PORT=8089
DB_HOST=db
DB_PORT=5432
DB_NAME=siteboss_prod
DB_USER=siteboss_user
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
DB_SSL=true
DB_MAX_CONNECTIONS=20

# Security (CRITICAL: Change these in production)
JWT_SECRET=GENERATE_A_STRONG_JWT_SECRET_AT_LEAST_32_CHARACTERS_LONG
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=GENERATE_A_DIFFERENT_STRONG_SECRET_FOR_REFRESH_TOKENS
JWT_REFRESH_EXPIRES_IN=30d
BCRYPT_ROUNDS=12
SESSION_SECRET=GENERATE_A_SESSION_SECRET_AT_LEAST_32_CHARACTERS

# CORS (Restrict to your domain)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://api.yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Trusted Proxies (if behind load balancer)
TRUSTED_PROXIES=

# Redis (Optional - for session storage and caching)
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Feature Flags
ENABLE_SWAGGER=false
ENABLE_METRICS=true

# Frontend (Production)
FRONTEND_PORT=3000
FRONTEND_PROD_PORT=8088
REACT_APP_API_URL=https://api.yourdomain.com

# SSL/TLS (if terminating SSL at application level)
SSL_KEY_PATH=
SSL_CERT_PATH=

# Monitoring & Analytics
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
GOOGLE_ANALYTICS_ID=

# Third-party Integrations
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=

# Health Check URLs (for external monitoring)
HEALTH_CHECK_URLS=https://api.yourdomain.com/health,https://yourdomain.com